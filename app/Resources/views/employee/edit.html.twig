{%  extends "base.html.twig" %}

{% block menu_user %}
    class="active"
{% endblock %}
{% block body_content %}
<!-- **********************************************************************************************************************************************************
        MAIN CONTENT
        *********************************************************************************************************************************************************** -->
<!--main content start-->
<section id="main-content">
    <section class="wrapper">

        <h3><i class="fa fa-angle-right"></i> Edition d'un employé</h3>

        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="form-panel">
                        <form action="" class="form-horizontal style-form" method="POST">
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Prénom : </label>
                                <div class="col-sm-10">
                                    {{ form_errors(form.prenom) }}
                                    {{ form_widget(form.prenom, {'attr' : {'class' : 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Nom : </label>
                                <div class="col-sm-10">
                                    {{ form_errors(form.nom) }}
                                    {{ form_widget(form.nom, {'attr' : {'class' : 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Email : </label>
                                <div class="col-sm-10">
                                    {{ form_errors(form.email) }}
                                    {{ form_widget(form.email, {'attr' : {'class' : 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Métier : </label>
                                <div class="col-sm-10">
                                    {{ form_errors(form.metier) }}
                                    {{ form_widget(form.metier, {'attr' : {'class' : 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Coût journalier (en €) : </label>
                                <div class="col-sm-10">
                                    {{ form_errors(form.cout) }}
                                    {{ form_widget(form.cout, {'attr' : {'class' : 'form-control'}}) }}
                                </div>
                            </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Date d'embauche : </label>
                            <div class="col-sm-10">
                                {{ form_errors(form.embauche) }}
                                {{ form_widget(form.embauche, {'attr' : {'class' : 'form-control'}}) }}
                            </div>
                        </div>
                        {{form_rest(form)}}
                                <input type="submit" name="submit" value="Enregistrer" class="btn btn-sm btn-success"/> 
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!--/row -->
    </section>
</section>
{% endblock %}