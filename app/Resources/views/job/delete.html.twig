{%  extends "base.html.twig" %}

{% block menu_job %}
    class="active"
{% endblock %}

{% block body_content %}
    <section id="main-content">
        <section class="wrapper">

            <h3><i class="fa fa-angle-right"></i> Suppression d'un métier</h3>
            <form action="" method="post">
                Etes vous sure de vouloir supprimer le métier " {{ job.nomMetier }} "?
                <div class="form-group">
                    <input type="submit" class="btn btn-danger" name="del" value="Oui">
                    <input type="submit" class="btn btn-success" name="del" value="Non">
                </div>
            </form>
        </section>
    </section>
{% endblock %}