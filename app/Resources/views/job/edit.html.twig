{%  extends "base.html.twig" %}

{% block menu_job %}
    class="active"
{% endblock %}
{% block body_content %}
    <!-- **********************************************************************************************************************************************************
            MAIN CONTENT
            *********************************************************************************************************************************************************** -->
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">

            <h3><i class="fa fa-angle-right"></i> Edition d'un métier</h3>

            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="form-panel">
                            <form action="" class="form-horizontal style-form" method="POST">
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Nom du métier </label>
                                    <div class="col-sm-10">
                                        {{ form_errors(form.nomMetier) }}
                                        {{ form_widget(form.nomMetier, {'attr' : {'class' : 'form-control'}}) }}
                                    </div>
                                </div>
                                {{form_rest(form)}}
                                <input type="submit" name="submit" value="Enregistrer" class="btn btn-sm btn-success"/>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!--/row -->
        </section>
    </section>
{% endblock %}